<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:with field="nameTokens"
		type="org.javahispano.javaleague.client.place.NameTokens" />

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	
	.danger {
		background-color: #fcf2f2;
		border-color: #dFb5b4;
	}
	
	.margin-fix {
		margin-top: 0 !important;
	}
	</ui:style>

	<b:Row>
		<b:Column size="XS_12">
			<b:Carousel b:id="carousel-captions">
				<b:CarouselIndicators>
					<b:CarouselIndicator dataTarget="#carousel-captions"
						dataSlideTo="0" active="true" />
					<b:CarouselIndicator dataTarget="#carousel-captions"
						dataSlideTo="1" />
					<b:CarouselIndicator dataTarget="#carousel-captions"
						dataSlideTo="2" />
				</b:CarouselIndicators>
				<b:CarouselInner>
					<b:CarouselSlide active="true">
						<b:Image width="100%" url="images/carousel1.png" />
						<b:CarouselCaption>
							<b:Heading size="H3" text="Slide 1" />
							<b.html:Paragraph text="Caption!" />
						</b:CarouselCaption>
					</b:CarouselSlide>
					<b:CarouselSlide>
						<b:Image width="100%" url="images/carousel2.png" />
						<b:CarouselCaption>
							<b:Heading size="H3" text="Slide 2" />
							<b.html:Paragraph text="Caption!" />
						</b:CarouselCaption>
					</b:CarouselSlide>
					<b:CarouselSlide>
						<b:Image width="100%" url="images/carousel3.png" />
						<b:CarouselCaption>
							<b:Heading size="H3" text="Slide 3" />
							<b.html:Paragraph text="Caption!" />
						</b:CarouselCaption>
					</b:CarouselSlide>
				</b:CarouselInner>
				<b:CarouselControl dataTarget="#carousel-captions"
					prev="true" iconType="CHEVRON_CIRCLE_LEFT" />
				<b:CarouselControl dataTarget="#carousel-captions"
					next="true" iconType="CHEVRON_CIRCLE_RIGHT" />
			</b:Carousel>
			<b:Jumbotron>
				<b:Row>
					<b:Column size="XS_8">
						<b:Heading size="H1" text="javacup 2016" />
						<b.html:Paragraph>
							¡ Por fin estamos de vuelta ! Actualiza o crea tu equipo para el
							nuevo torneo
						</b.html:Paragraph>
						<b.html:Paragraph>
							Hay novedades en esta edición. No lo pienses más y participa.
							Tienes hasta el 30 de abril de 2016 para preparar tu equipo.
						</b.html:Paragraph>
					</b:Column>
					<b:Column size="XS_4">
						<b:Image url="images/duke-futbol.png"></b:Image>
					</b:Column>
				</b:Row>
			</b:Jumbotron>
		</b:Column>
	</b:Row>

</ui:UiBinder>