<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:with field="nameTokens"
		type="org.javahispano.javaleague.client.place.NameTokens" />

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	
	.danger {
		background-color: #fcf2f2;
		border-color: #dFb5b4;
	}
	
	.margin-fix {
		margin-top: 0 !important;
	}
	</ui:style>

	<b:Row>
		<b:Alert type="DANGER" dismissable="true">
			<b.html:Strong>
				<ui:msg key="test">Estamos en pruebas</ui:msg>
			</b.html:Strong>
		</b:Alert>
		<b:Jumbotron ui:field="jumbotron">
			<b:Row>
				<b:Column size="MD_12">
					<b.html:Paragraph>
						<ui:msg key="welcome">Bienvenido a javaLeague</ui:msg>
					</b.html:Paragraph>

					<b.html:Paragraph>
						<b:Image url="images/javacup_logo.png" width="100%" />
					</b.html:Paragraph>
				</b:Column>
			</b:Row>
			<b:Row>
				<b:Column size="MD_6">
					<b.html:Paragraph>
						<ui:msg key="intro1">
							Descárgate el framework para poder crear tu
							táctica y
							empezar a competir.
						</ui:msg>
					</b.html:Paragraph>
					<b.html:Paragraph>
						<ui:msg key="intro2">
							javaLeague te
							permitirá crear y participar en
							diferentes
							ligas.
						</ui:msg>
					</b.html:Paragraph>
				</b:Column>
				<b:Column size="MD_5" offset="MD_1">
					<b.html:Paragraph>
						<iframe src='//www.youtube.com/embed/Dvbkd_OpHYg'
							frameborder='0' allowfullscreen='true' width='100%' height='315'></iframe>
					</b.html:Paragraph>

				</b:Column>
			</b:Row>

		</b:Jumbotron>
	</b:Row>

</ui:UiBinder>