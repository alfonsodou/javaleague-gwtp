<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:up="urn:import:gwtupload.client"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:with field="nameTokens"
		type="org.javahispano.javaleague.client.place.NameTokens" />

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	
	.danger {
		background-color: #fcf2f2;
		border-color: #dFb5b4;
	}
	
	.margin-fix {
		margin-top: 0 !important;
	}
	
	.footer button {
		margin-right: 5px;
	}
	
	.column {
		text-align: center;
	}
	</ui:style>

	<b:Panel>
		<b:PanelHeader>
			<b:Heading size="H3" text="Mi Táctica" />
		</b:PanelHeader>
		<b:PanelBody>
			<b:Row>
				<b:Column size="XS_6">
					<b:Panel>
						<b:PanelHeader>
							<b:Heading size="H3" text="Datos" />
						</b:PanelHeader>
						<b:PanelBody ui:field="body">
							<b:Form ui:field="formTactic">
								<b:FieldSet>
									<b:FormGroup>
										<b:FormLabel for="teamName" showRequiredIndicator="true">Nombre
											Equipo:</b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
										<b:TextBox allowBlank="false" validateOnBlur="true"
											b:id="teamName" ui:field="teamName" />
									</b:FormGroup>
								</b:FieldSet>
								<b:FieldSet>
									<b:Button type="PRIMARY" ui:field="updateTactic">Actualizar</b:Button>
								</b:FieldSet>
							</b:Form>
						</b:PanelBody>
						<b:PanelFooter addStyleNames="{style.footer}">
							<up:SingleUploader ui:field="singleUploader"
								type="ANCHOR" enabled="true"></up:SingleUploader>
							<b:Row>
								<b:Column size="MD_12" addStyleNames="{style.column}">
									<b:Label type="INFO" ui:field="packageName"></b:Label>
								</b:Column>
							</b:Row>
							<b:Row>
								<b:Column size="MD_12" addStyleNames="{style.column}">
									<b:Label type="INFO" ui:field="packageNameUser"></b:Label>
								</b:Column>
							</b:Row>
						</b:PanelFooter>
					</b:Panel>
				</b:Column>
				<b:Column size="XS_6">
					<b:Panel>
						<b:PanelHeader>
							<b:Heading size="H3" text="Estadísticas"></b:Heading>
						</b:PanelHeader>
						<b:PanelBody></b:PanelBody>
						<b:PanelFooter>
							<b:Button type="PRIMARY" ui:field="playGame">Jugar partido amistoso</b:Button>
						</b:PanelFooter>
					</b:Panel>
				</b:Column>
			</b:Row>
			<b:Row>
				<b:Column size="XS_12">
					<b:Label type="INFO">Funciona!!"</b:Label>
				</b:Column>
			</b:Row>
		</b:PanelBody>
	</b:Panel>

</ui:UiBinder>