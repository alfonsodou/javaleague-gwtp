<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:with field="nameTokens"
		type="org.javahispano.javaleague.client.place.NameTokens" />

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	
	.danger {
		background-color: #fcf2f2;
		border-color: #dFb5b4;
	}
	
	.margin-fix {
		margin-top: 0 !important;
	}
	</ui:style>

	<b:Container>
		<b:NavTabs>
			<b:TabListItem active="true" dataTarget="#tab1" text="Calendario">
			</b:TabListItem>
			<b:TabListItem dataTarget="#tab2" text="Clasificación"></b:TabListItem>
		</b:NavTabs>
		<b:TabContent>
			<b:TabPane active="true" b:id="tab1">
				<b:Row>
					<b:Column size="XS_12">
						<b:Lead text="Jornada"></b:Lead>
						<b.gwt:CellTable bordered="true" condensed="true"
							striped="true" hover="true" width="100%" ui:field="cellTable" />
						<b:Pagination ui:field="cellTablePagination" />
						<b:Lead text="Clasificación"></b:Lead>
						<b.gwt:CellTable bordered="true" condensed="true"
							striped="true" hover="true" width="100%" ui:field="cellTableClasification"></b.gwt:CellTable>
						<b:Pagination ui:field="cellTableClasificationPagination"></b:Pagination>
						<b:Container ui:field="journeyContainer"></b:Container>
					</b:Column>
				</b:Row>
			</b:TabPane>
			<b:TabPane b:id="tab2"></b:TabPane>
		</b:TabContent>
	</b:Container>
</ui:UiBinder>