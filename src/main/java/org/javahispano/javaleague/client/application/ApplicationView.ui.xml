<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:import field="org.javahispano.javaleague.client.debug.DebugIds.*" />

	<ui:style>
	.globalWrapper {
		position: relative;
	}
	
	.messagesWrapper {
		width: 300px;
		position: absolute;
		top: 30px;
		left: 50%;
		margin-left: -150px;
	}
	
	.container {
		width: 1000px;
		margin: 20px auto;
	}
	</ui:style>

	<g:ScrollPanel styleName="{style.globalWrapper}">
		<b:Container>
			<g:SimplePanel ui:field="header" />

			<g:SimplePanel ui:field="messages" styleName="{style.messagesWrapper}" />

			<g:HTMLPanel ui:field="container" styleName="{style.container}">
				<g:SimplePanel ui:field="main" />
			</g:HTMLPanel>
			<g:InlineLabel debugId="{DBG_DOM}" />

			<g:SimplePanel ui:field="footer">
				<b:Row>
					<b:Column size="XS_12">
						<b:ImageAnchor href="http://www.javahispano.org"
							url="/images/logoJavaHispano.png"></b:ImageAnchor>
					</b:Column>
				</b:Row>
			</g:SimplePanel>
		</b:Container>
	</g:ScrollPanel>
</ui:UiBinder>
